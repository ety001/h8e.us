{% extends 'base.html.twig' %}

{% block body %}
    <div class="header">
        {% if user %}
        <div class="am-g">
            <h1>胡八一&nbsp;短网址</h1>
            <p>Login as: <a href="{{ path('panel') }}">{{ user.username }}</a></p>
        </div>
        {% else %}
        <div class="am-g">
            <h1>胡八一&nbsp;短网址</h1>
            <p>Make Your URL Short</p>
        </div>
        {% endif %}
        <hr />
    </div>
    <div class="am-g">
        <div class="am-u-lg-6 am-u-md-8 am-u-sm-centered">
            {{ include('pieces/adsense.html.twig') }}
            <div class="am-alert am-hide" id="msg"></div>
            <div class="am-form am-text-center">
                <input type="text" id="url" placeholder="你的网址" value="">
                <br>
                <input type="text" id="code" placeholder="你的自定义地址" value="">
                <br />
                <div class="am-cf">
                    <button id="create" class="am-btn am-btn-primary">生成</button>
                    <a href="{{ path('panel') }}" class="am-btn am-btn-default">管理</a>
                    <a href="{{ path('plugins') }}" class="am-btn am-btn-warning">小插件</a>
                </div>
            </div>
            <br><br>
            {{ include('pieces/adsense.html.twig') }}
            <hr>
            <p>© 2015 <a href="http://www.domyself.me/" target="_blank">ETY001</a>.</p>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    var post_url = "{{ path('url') }}";
    var get_url = "{{ absolute_url(path('jump')) }}";
</script>
<script src="{{ asset('assets/js/clipboard.min.js') }}"></script>
<script src="{{ asset('assets/js/custom/default.js') }}"></script>
{% endblock %}